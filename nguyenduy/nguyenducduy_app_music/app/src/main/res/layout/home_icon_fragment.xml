<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:maxWidth="500dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginVertical="25dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:id="@+id/btnArtist"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                app:tint="@color/colorAccent"
                android:src="@drawable/icon_singer"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:text="@string/Artist"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textSize="17sp"
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnUpload"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                app:tint="@color/colorAccent"
                android:id="@+id/imvPlaylist"
                android:clickable="false"
                android:layout_gravity="center"
                android:src="@drawable/ic_playlist"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:text="Nháº¡c Upload"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:layout_gravity="center"
                android:textSize="17sp"
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnSong"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                app:tint="@color/colorAccent"
                android:clickable="false"
                android:scaleType="centerInside"
                android:layout_gravity="center"
                android:src="@drawable/ic_home_song"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <TextView
                android:text="@string/Songs"
                android:textSize="17sp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/btnTop100"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageButton
                android:clickable="false"
                app:tint="@color/colorAccent"
                android:src="@drawable/icon_top100"
                android:background="@android:color/transparent"
                android:layout_width="match_parent"
                android:layout_height="50dp"/>
            <TextView
                android:text="Top 100"
                android:layout_marginTop="5dp"
                android:textSize="17sp"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>