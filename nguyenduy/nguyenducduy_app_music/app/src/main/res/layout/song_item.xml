<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingBottom="2dp"
    android:background="@color/holoWhite"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imv"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"
            android:scaleType="centerCrop"
            android:layout_width="45dp"
            android:layout_height="45dp"
           />
        <LinearLayout
            android:layout_weight="1"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/lbTitle"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="Chay ve noi phia anh"
                android:layout_marginStart="15dp"
                android:gravity="center"
                android:textStyle="normal"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:visibility="gone"
                    android:id="@+id/lbSub"
                    android:text="Khac Viet"
                    android:ellipsize="end"
                    android:layout_marginStart="15dp"
                    android:gravity="left"
                    android:textStyle="normal"
                    android:maxLines="1"
                    android:textSize="15sp"
                    android:textColor="@color/homeSubTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:visibility="gone"
                    android:layout_marginStart="8dp"
                    android:layout_gravity="center"
                    android:src="@drawable/headphone"
                    android:scaleType="centerInside"
                    android:layout_width="13dp"
                    android:layout_height="13dp"/>

                <TextView
                    android:visibility="gone"
                    android:text="114.1k"
                    android:layout_marginStart="5dp"
                    android:gravity="center"
                    android:textStyle="normal"
                    android:textSize="13sp"
                    android:textColor="@color/graya5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </LinearLayout>


        </LinearLayout>

        <ImageView
            android:id="@+id/btnMore"
            android:visibility="gone"
            android:background="@android:color/transparent"
            android:layout_gravity="center"
            android:src="@drawable/icon_more"
            android:layout_marginEnd="20dp"
            android:scaleType="centerCrop"
            android:layout_width="20dp"
            android:layout_height="20dp"
            app:tint="@color/graya5" />
        <TextView
            android:id="@+id/lbNumber"
            android:text="1"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginEnd="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
             />
    </LinearLayout>

    <View
        android:id="@+id/line"
        android:background="@color/grey"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>

</LinearLayout>